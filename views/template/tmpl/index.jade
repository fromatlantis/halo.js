extends ../../layout
block content
	div.template-class
		div.class.class-1.current 农户类
		div.class.class-2 商户类
		div(style="clear:both;")
	div
		div.search-list
			table
				tr
					td.title 机构：
					td
						span.current 机构1
						span 机构2
						span 机构3
					</td>
				tr
					td.title 行业：
					td
						span 行业1
						span.current 行业2
						span 行业3
				tr
					td.title 上传者：
					td
						span.current 上传者1
						span 上传者2
						span 上传者3						
		div.template-list
			div.template-info （标准）模版
			div.template-tips
				span.remark.new-remark
					|	如果您需要新建模版，请在此标准模版格式下进行编辑
				span.fr
					span.preview 预览
		-for (var i = 5; i >= 0; i--) {
			div.template-list
				div.template-info
					table
						tr
							td 模版名称：小额贷款客户家庭经济情况调查模版
							td 所属行业：行业1
						tr
							td 分享人：牛志伟
							td 所属机构：机构1
						tr
							td 分享时间：2016-08-02 17:00
							td 来源：来源1
				div.template-tips
					span.remark
						| 小额贷款、经济情况调查
					if(nav == 'templateLiked')
						span
							i.iconfont.icon-liked(title='取消收藏') &#xe64a;
					else
						span
							i.iconfont.icon-like(title='收藏') &#xe64b;
					span.fr
						span.use-count
							i.iconfont &#xe69e;
							| 15人正在使用
						span.preview 
							a.btn-link(href='javascript:;') 预览
						span.del 
							a.btn-link(href='javascript:;') 删除
		-}
	div.help-card
		div.help-card-title
			i.iconfont.split &#xe601;
			span 有问题？看这里
		div.help-card-content
			li 
				a.btn-link 如何使用他人分享的模板
			li 
				a.btn-link 如何上传模板
			li 
				a.btn-link 如何分享模板
			li 
				a.btn-link 模板使用注意事项